<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="com.example.dogcare.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_home2_to_register"
            app:destination="@id/register" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.dogcare.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_mainHome"
            app:destination="@id/mainHome" />
        <action
            android:id="@+id/action_login_to_forgotPwd2"
            app:destination="@id/forgotPwd2" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.dogcare.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/mainHome"
        android:name="com.example.dogcare.MainHome"
        android:label="fragment_main_home"
        tools:layout="@layout/fragment_main_home" />
    <fragment
        android:id="@+id/forgotPwd2"
        android:name="com.example.dogcare.ForgotPwd"
        android:label="fragment_forgot_pwd"
        tools:layout="@layout/fragment_forgot_pwd" />
</navigation>